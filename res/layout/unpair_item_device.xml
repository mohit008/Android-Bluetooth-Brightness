<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0797D3"
    android:paddingBottom="5dp"
    android:paddingTop="5dp" >

    <Button
        android:id="@+id/unpair_btn"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="#0C76A3"
        android:text="Pair"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/unpair_device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/go"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:text="Galaxy Nexus"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/unpair_device_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/unpair_device_name"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/unpair_device_name"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:text="000000000"
        android:textColor="#ffffff" />

</RelativeLayout>